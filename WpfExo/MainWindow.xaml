                <MenuItem Name="Exo8" Header="Exercice 8 - ComboBox remplie en C#" Click="MenuItem_Click_1"/>
                <MenuItem Name="Exo9" Header="Exercice 9 - Grille avec des buttons" Click="MenuItem_Click_1"/>
                <MenuItem Name="Exo10" Header="Exercice 10 - Dock avec menu à gauche" Click="MenuItem_Click_1"/>
