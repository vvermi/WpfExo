        xmlns:local="clr-namespace:WpfExo"
        mc:Ignorable="d"
        Title="MainWindow" Height="986" Width="826">

    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Fichier">
