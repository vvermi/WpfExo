<UserControl x:Class="WpfExo.Exercices.Exo4_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfExo.Exercices"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions >
            <ColumnDefinition Width="1*" MinWidth="10"/>
            <ColumnDefinition Width="1*" MinWidth="10"/>
            <ColumnDefinition Width="1*" MinWidth="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions >
            <RowDefinition Height="1*" MinHeight="10"/>
            <RowDefinition Height="1*" MinHeight="10"/>
            <RowDefinition Height="1*" MinHeight="10"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="1">
            <Button.Style>
                <Style/>
            </Button.Style>
            <Button.Content>
                <StackPanel>
                    <Image x:Name="Image" Source="/Exercices/R.jpeg" Stretch="Fill" Width="100" Height="100"></Image>
                    <TextBlock HorizontalAlignment="Center">Cliquer ici</TextBlock>
                </StackPanel>
            </Button.Content>
        </Button>
    </Grid>
        
    
</UserControl>
