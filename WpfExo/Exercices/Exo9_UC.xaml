<UserControl x:Class="WpfExo.Exercices.Exo9_UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfExo.Exercices"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Content="0,0" Grid.Column="0" Grid.Row="0"/>
        <Button Content="1,1" Grid.Column="1" Grid.Row="1"/>
        <Button Content="0,2" Grid.Column="0" Grid.Row="2"/>
        <Button Content="2,2 ColumnSpan 2" Grid.Column="2" Grid.Row="2" Grid.ColumnSpan="2"/>
        <Button Content="3,3" Grid.Column="1" Grid.Row="3"/>

    </Grid>
</UserControl>
